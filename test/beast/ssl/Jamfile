local SOURCES =
    ssl_stream.cpp
    ;

local RUN_TESTS ;

for local f in $(SOURCES)
{
    RUN_TESTS += [ run $(f)  ] ;
}

alias run-tests : $(RUN_TESTS) ;

exe fat-tests :  $(SOURCES) ;

explicit fat-tests ;

run  $(SOURCES) : : : : run-fat-tests ;

explicit run-fat-tests ;
